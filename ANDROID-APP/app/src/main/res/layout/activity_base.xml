<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/base_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/base_toolbar"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/primary_color">
                    <politcc2017.tcc_app.Components.CustomTextView
                        android:id="@+id/base_toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/base_toolbar_language_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_small"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:src="@drawable/flag_pt"/>
                        <ImageView
                            android:id="@+id/base_toolbar_righ_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/margin_small"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:src="@drawable/ic_list"/>
                        <ImageView
                            android:id="@+id/base_toolbar_rightmost_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/margin_small"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:src="@drawable/ic_search"/>

                        <ImageView
                            android:id="@+id/base_toolbar_leftmost_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/margin_small"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:src="@drawable/ic_save"/>
                    </LinearLayout>
                </android.support.v7.widget.Toolbar>
            <FrameLayout
                android:id="@+id/activity_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/base_drawer_recycler_view"
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/cyan_lighter"/>
    </android.support.v4.widget.DrawerLayout>
