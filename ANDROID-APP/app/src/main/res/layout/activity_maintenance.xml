<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:gravity="center_horizontal">

    <politcc2017.tcc_app.Components.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/maintenance_activity_text" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:src="@drawable/maintenance_icon"/>
    <politcc2017.tcc_app.Components.CustomButton
        android:id="@+id/maintenance_back_button"
        style="@style/FullWidthButton"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/maintenance_activity_back_button_text"/>
</LinearLayout>
