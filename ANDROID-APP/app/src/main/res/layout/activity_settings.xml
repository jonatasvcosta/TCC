<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cyan_lightest"
    android:padding="@dimen/margin_medium"
    android:gravity="center_horizontal">

    <politcc2017.tcc_app.Components.CustomButton
        android:id="@+id/settings_native_language_btn"
        style="@style/FullWidthButton"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/settings_native_language"
        android:layout_marginBottom="@dimen/margin_medium"/>

    <politcc2017.tcc_app.Components.CustomButton
        android:id="@+id/settings_learning_language_btn"
        style="@style/FullWidthButton"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/signup_activity_languages_field"/>
    <politcc2017.tcc_app.Components.CustomCard
        android:id="@+id/language_learning_stats"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
