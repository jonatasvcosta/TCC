<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/cyan_lightest"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <politcc2017.tcc_app.Components.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextMediumBlack"
        android:text="@string/be_a_pro_language_picker_text" />
    <politcc2017.tcc_app.Components.CustomPicker
        android:id="@+id/signup_activity_native_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:validation_type="default_mandatory"
        app:error_message="@string/signup_activity_languages_field_error"/>
    <politcc2017.tcc_app.Components.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextMediumBlack"
        android:text="@string/be_a_pro_language_title_text" />
    <politcc2017.tcc_app.Components.CustomEditText
        android:id="@+id/signup_activity_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:validation_type="email"
        app:display_type="single_line"
        app:error_message="@string/be_a_pro_language_title_text_error"/>
    <politcc2017.tcc_app.Components.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextMediumBlack"
        android:text="@string/be_a_pro_language_tags_text" />
    <io.github.mthli.knife.KnifeText
        android:id="@+id/class_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/multiline_edit_text_fixed_height"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:gravity="top|start"
        android:textColor="@color/gray"
        android:scrollbars="vertical"
        android:focusable="false"
        android:background="@color/cyan_darkest"
        app:bulletColor="@color/cyan"
        app:bulletRadius="@dimen/bullet_radius"
        app:bulletGapWidth="@dimen/bullet_gap_width"
        app:historyEnable="true"
        app:historySize="99"
        app:linkColor="@color/cyan"
        app:linkUnderline="true"
        app:quoteColor="@color/cyan"
        app:quoteStripeWidth="@dimen/quote_stripe_width"
        app:quoteCapWidth="@dimen/quote_gap_width">
    </io.github.mthli.knife.KnifeText>

</LinearLayout>