<?xml version="1.0" encoding="utf-8"?>
<com.ramotion.foldingcell.FoldingCell android:id="@+id/bookshelf_category_folding_cell"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium"
    xmlns:android="http://schemas.android.com/apk/res/android">        ​
        <FrameLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cyan_darkest"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:minHeight="@dimen/site_suggestion_cell_unfolded_height"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <politcc2017.tcc_app.Components.CustomTextView
                        android:id="@+id/category_title_unfolded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_centerHorizontal="true"
                        style="@style/TextMediumCyan"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/bookshelf_category_edit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pencil"
                            android:clickable="true"
                            android:layout_marginRight="@dimen/margin_small"
                            android:background="?android:attr/selectableItemBackground"/>
                        <ImageView
                            android:id="@+id/bookshelf_category_remove_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_remove"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
        ​
        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cyan_lightest">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:minHeight="@dimen/bookshelf_category_cell_folded_height"
                android:gravity="center"
                android:orientation="vertical">
                <politcc2017.tcc_app.Components.CustomTextView
                    android:id="@+id/category_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextLargeGray"/>
            </LinearLayout>
        </FrameLayout>    ​
</com.ramotion.foldingcell.FoldingCell>