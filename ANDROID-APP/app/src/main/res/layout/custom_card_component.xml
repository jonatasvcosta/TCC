<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cyan_lightest"
    android:gravity="center_horizontal">
    <android.support.v7.widget.CardView
        android:id="@+id/custom_card_card_layout"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_medium"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/custom_card_top_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="@dimen/margin_small">
                <LinearLayout
                    android:id="@+id/custom_card_top_icons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_small"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/custom_card_edit_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small"
                        android:src="@drawable/ic_pencil"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"/>
                    <ImageView
                        android:id="@+id/custom_card_favorite_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>
                <politcc2017.tcc_app.Components.CustomTextView
                    android:id="@+id/custom_card_votes"
                    style="@style/TextMediumBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="#122"
                    />
                <politcc2017.tcc_app.Components.CustomTextView
                    android:id="@+id/custom_card_title"
                    style="@style/TextLargeGray"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/custom_card_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_toLeftOf="@id/custom_card_top_icons_container"
                    android:text="Título muito grande que deveria ser cortado como efeito de teste"/>
                <View
                    android:id="@+id/custom_card_top_separator"
                    android:layout_width="match_parent"
                    android:layout_alignBottom="@id/custom_card_title"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_height="@dimen/separator_size"
                    android:background="@color/md_divider_black"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/custom_card_top_separator"
                android:orientation="vertical">
                <politcc2017.tcc_app.Components.CustomHTMLEditText
                    android:id="@+id/custom_card_class_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/custom_search_toolbar_height"
                    android:minHeight="@dimen/multiline_edit_text_fixed_height"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:textColorHint="@color/gray"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In tincidunt odio vitae eros fringilla laoreet. Curabitur mollis lorem ac ipsum ultricies, sed luctus felis tincidunt. Sed aliquam commodo massa et luctus. Integer id cursus sapien. Suspendisse tristique nisi est, at ornare eros dapibus id. Mauris vehicula tincidunt gravida. Etiam rhoncus cursus sollicitudin. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec blandit odio nibh, quis tristique quam dignissim non. Proin a dolor vitae magna pulvinar viverra. Vivamus ultrices metus sit amet ex consequat, blandit viverra erat ullamcorper. Pellentesque sed ante non risus fringilla mattis."
                    android:maxLines="9"
                    android:ellipsize="end"
                    android:textSize="@dimen/font_medium"
                    android:paddingStart="16dp"
                    android:paddingRight="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="top|start"
                    android:textColor="@color/gray"
                    android:scrollbars="vertical"
                    android:inputType="none"
                    android:editable="false"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/transparent"/>
                <LinearLayout
                    android:id="@+id/card_class_movie_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <com.pierfrancescosoffritti.youtubeplayer.YouTubePlayerView
                        android:id="@+id/card_class_movie_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@id/content_container"
                android:id="@+id/custom_card_bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:padding="@dimen/margin_small">
                <View
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_height="@dimen/separator_size"
                    android:background="@color/md_divider_black"/>
                <LinearLayout
                    android:id="@+id/custom_card_bottom_icons_container"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/custom_card_downvote_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small"
                        android:src="@drawable/ic_downvote"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"/>
                    <ImageView
                        android:id="@+id/custom_card_upvote_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_upvote"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>
                <politcc2017.tcc_app.Components.CustomTextView
                    android:id="@+id/custom_card_categories"
                    android:layout_marginTop="@dimen/margin_small"
                    style="@style/TextMediumCyan"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_toLeftOf="@id/custom_card_bottom_icons_container"
                    android:text="Título muito grande que deveria ser cortado como efeito de teste mas agora com duas linhas fica ainda maior e mais imprevisível"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
