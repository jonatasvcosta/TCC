<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vocabulary_word_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small"
    android:gravity="center_horizontal">
    <LinearLayout
        android:id="@+id/trending_topic_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/label_extra_rounded_background"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
            <politcc2017.tcc_app.Components.CustomTextView
                android:id="@+id/trending_topic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextLargeWhite"
                android:padding="@dimen/margin_small"/>
    </LinearLayout>
</RelativeLayout>