<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vocabulary_word_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small"
    android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cyan_darker"
            android:orientation="horizontal">
                <politcc2017.tcc_app.Components.CustomTextView
                    android:id="@+id/vocabulary_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    style="@style/TextMediumCyan"
                    android:padding="@dimen/margin_small"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_small"
                    android:orientation="horizontal">
                        <politcc2017.tcc_app.Components.CustomTextView
                            android:id="@+id/vocabulary_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            style="@style/TextMediumBlack"
                            android:padding="@dimen/margin_small"/>
                </LinearLayout>
        </RelativeLayout>
</RelativeLayout>