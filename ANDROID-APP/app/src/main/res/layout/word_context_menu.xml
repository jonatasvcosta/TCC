<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="false">
    <politcc2017.tcc_app.Components.CustomTextView
        android:id="@+id/word_context_menu_translation_text"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextMediumBeige"
        android:layout_marginBottom="@dimen/margin_medium"/>
    <politcc2017.tcc_app.Components.CustomTextView
        android:id="@+id/word_context_menu_phrase_context_text"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextMediumBeige"
        android:layout_marginBottom="@dimen/margin_medium"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_extra_small">
        <LinearLayout
            android:id="@+id/add_to_bookshelf_context_container"
            android:layout_width="0dp"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"/>
            <politcc2017.tcc_app.Components.CustomTextView
                style="@style/TextSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/word_context_menu_add"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/translate_context_container"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_translate"/>
            <politcc2017.tcc_app.Components.CustomTextView
                style="@style/TextSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/word_context_menu_translate"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pronounce_context_container"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_microphone"/>
            <politcc2017.tcc_app.Components.CustomTextView
                style="@style/TextSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/word_context_menu_pronounce"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_extra_small">
        <LinearLayout
            android:id="@+id/synonym_context_container"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_synonym"/>
            <politcc2017.tcc_app.Components.CustomTextView
                style="@style/TextSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/word_context_menu_synonym"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/antonym_context_container"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_antonym"/>
            <politcc2017.tcc_app.Components.CustomTextView
                style="@style/TextSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/word_context_menu_antonym"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/similar_words_context_container"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_similar_words"/>
            <politcc2017.tcc_app.Components.CustomTextView
                style="@style/TextSmallBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/word_context_menu_similar_words"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
