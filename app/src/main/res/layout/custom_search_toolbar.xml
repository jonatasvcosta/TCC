<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@android:color/holo_red_light">
    <android.support.v7.widget.Toolbar
        android:id="@+id/search_toolbar"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingLeft="@dimen/margin_extra_large"
        android:paddingRight="@dimen/margin_medium"
        android:layout_height="@dimen/custom_search_toolbar_height">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/search_toolbar_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_search"
                android:clickable="true"/>
            <EditText
                android:id="@+id/search_toolbar_edit_text"
                style="@style/TextMediumGray"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/search_toolbar_search_icon"
                android:layout_marginRight="@dimen/margin_extra_large"
                android:paddingTop="@dimen/margin_extra_small"
                android:paddingBottom="@dimen/margin_extra_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingLeft="@dimen/margin_small"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:background="@drawable/search_edit_text_background"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</LinearLayout>
