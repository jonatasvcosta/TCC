<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/cyan_darker</item>
        <item name="colorAccent">@color/cyan_lighter</item>
    </style>

    <style name="TextSmallWhite">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextMediumWhite">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextLargeWhite">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextSmallBeige">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/beige</item>
    </style>
    <style name="TextMediumBeige">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/beige</item>
    </style>
    <style name="TextLargeBeige">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/beige</item>
    </style>
    <style name="TextSmallGray">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TextMediumGray">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TextLargeGray">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TextSmallBlack">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextErrorRed">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="TextMediumBlack">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextLargeBlack">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PrimaryButton">
        <item name="android:layout_width">@dimen/primary_button_width</item>
        <item name="android:minHeight">@dimen/primary_button_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/primary_button_background_selector</item>
        <item name="android:textColor">@color/beige</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>
    <style name="FullWidthButton" parent="@style/PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/full_width_button_height</item>
    </style>
    <style name="LinkButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@drawable/link_button_selector</item>
    </style>
</resources>
